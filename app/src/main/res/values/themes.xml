<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema Base (não mexa) -->
    <style name="Theme.AndroidAppTemplate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Atributos padrão que podem ser sobrescritos pelos temas filhos -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AndroidAppTemplate.Default" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/default_primary</item>
        <item name="colorPrimaryVariant">@color/default_primaryVariant</item>
        <item name="colorOnPrimary">@color/default_onPrimary</item>
        <item name="colorSecondary">@color/default_secondary</item>
        <item name="colorOnSecondary">@color/default_onSecondary</item>
        <item name="android:colorBackground">@color/default_background</item>
        <item name="colorSurface">@color/default_surface</item>
        <item name="colorOnBackground">@color/default_onBackground</item>
        <item name="colorOnSurface">@color/default_onSurface</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.AndroidAppTemplate.Claro" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/claro_primary</item>
        <item name="colorPrimaryVariant">@color/claro_primaryVariant</item>
        <item name="colorOnPrimary">@color/claro_onPrimary</item>
        <item name="colorSecondary">@color/claro_secondary</item>
        <item name="colorOnSecondary">@color/claro_onSecondary</item>
        <item name="android:colorBackground">@color/claro_background</item>
        <item name="colorSurface">@color/claro_surface</item>
        <item name="colorOnBackground">@color/claro_onBackground</item>
        <item name="colorOnSurface">@color/claro_onSurface</item>
