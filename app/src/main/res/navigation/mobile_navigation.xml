<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <!-- 1. Destino para a Tela Home (Novidades) -->
    <fragment
        android:id="@+id/navigation_home"
        android:name="com.gmrsvoiage.togethernotes.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <!-- 2. Destino para a Tela Explorar (Mapa) -->
    <fragment
        android:id="@+id/navigation_mapa"
        android:name="com.gmrsvoiage.togethernotes.ui.mapa.MapaFragment"
        android:label="@string/title_mapa"
        tools:layout="@layout/fragment_mapa" />

    <!-- 3. Destino para a Tela Adicionar -->
    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.gmrsvoiage.togethernotes.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <!-- 4. Destino para a Tela de Perfil -->
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.gmrsvoiage.togethernotes.ui.usuario.PerfilUsuarioFragment"
        android:label="@string/title_profile"
        tools:layout="@layout/fragment_perfil_usuario" />

</navigation>
