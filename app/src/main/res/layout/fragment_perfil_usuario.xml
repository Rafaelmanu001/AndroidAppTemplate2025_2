<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.usuario.PerfilUsuarioFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. Título da Tela -->
        <TextView
            android:id="@+id/text_perfil_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Meu Perfil"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 2. Foto do Usuário (usando um CardView para ficar mais bonito) -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_foto_perfil"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_perfil_title">

            <ImageView
                android:id="@+id/image_view_perfil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="Foto de perfil"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. Campos de Texto para MOSTRAR as informações -->
        <TextView
            android:id="@+id/text_view_nome_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_foto_perfil"
            tools:text="Nome do Usuário" />

        <TextView
            android:id="@+id/text_view_email_perfil"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textAlignment="center"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_nome_perfil"
            tools:text="email@exemplo.com" />

        <!-- 4. Título para a lista de tesouros -->
        <TextView
            android:id="@+id/text_meus_tesouros_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Meus Tesouros Adicionados"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_view_email_perfil" />

        <!-- 5. RecyclerView para listar os tesouros do usuário -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_meus_tesouros"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="150dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_meus_tesouros_title"
            tools:listitem="@layout/item_meu_tesouro" />

        <TextView
            android:id="@+id/text_view_nenhum_tesouro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Você ainda não adicionou nenhum tesouro."
            android:textAlignment="center"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_meus_tesouros"
            app:layout_constraintEnd_toEndOf="@id/recycler_view_meus_tesouros"
            app:layout_constraintStart_toStartOf="@id/recycler_view_meus_tesouros"
            app:layout_constraintTop_toTopOf="@id/recycler_view_meus_tesouros"
            tools:visibility="visible" />

        <ProgressBar
            android:id="@+id/progress_bar_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@id/recycler_view_meus_tesouros"
            app:layout_constraintBottom_toBottomOf="@id/recycler_view_meus_tesouros"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 6. Botão de Logout -->
        <Button
            android:id="@+id/button_logout"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Sair (Logout)"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/recycler_view_meus_tesouros" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
